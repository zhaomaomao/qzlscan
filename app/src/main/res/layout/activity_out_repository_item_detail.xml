<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.quanzhilian.qzlscan.activities.outrepository.OutRepositoryItemDetailActivity">
    <!--页面头部-->
    <include
        android:id="@+id/layout_title_bar"
        layout="@layout/common_header_title_bar" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_product_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingLeft="5dp">

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginTop="5dp"
                android:src="@mipmap/item" />

            <TextView
                android:id="@+id/tv_product_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="none"
                android:paddingLeft="5dp"
                android:text="@string/loading"
                android:textSize="@dimen/text_size_middle" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_scan_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="共5件"
                android:textSize="@dimen/text_size_middle" />

            <TextView
                android:id="@+id/tv_scan_ton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已扫2件"
                android:textSize="@dimen/text_size_mini" />

            <TextView
                android:id="@+id/tv_scan_diff_ton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已扫2件"
                android:textSize="@dimen/text_size_mini" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        style="@style/detail_content_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="已扫描库存商品" />

    <ListView
        android:id="@+id/lv_bill_product_detail"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:divider="@drawable/list_item_divider"
        android:dividerHeight="1px">

    </ListView>
</LinearLayout>
